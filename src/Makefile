# Makefile for producer consumer problem

###############################################################
# Variables
GCC     = gcc
OPTIONS = -pthread -lrt -lstdc++ -o
###############################################################

###############################################################
###############################################################
# Rules
###############################################################
###############################################################

###############################################################
# Compile producer and consumer
producer:
	$(GCC) producer.cpp $(OPTIONS) producer
	
consumer:
	$(GCC) consumer.cpp $(OPTIONS) consumer

###############################################################

###############################################################
# Make the problem run
run:
	./producer & ./consumer &

###############################################################
# Remove executables
clean:
	rm -f producer
	rm -f consumer

###############################################################
